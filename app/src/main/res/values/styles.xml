<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light"></style>

    <style name="TitleBarBackground">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MyCustomTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowTitleBackgroundStyle">@style/TitleBarBackground</item>
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="DocTheme" parent="MyCustomTheme">
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
    </style>
    <!--<style name="ActionBarTitle" parent="android:Theme.Holo.Light"></style>-->

</resources>
